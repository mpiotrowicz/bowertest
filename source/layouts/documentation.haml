  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %title= data.page.title || "Sitemap"
    %meta{:content => data.page.description || "List of Templates", :name => "description"}
    %meta{:content => "width=device-width", :name => "viewport"}
    = javascript_include_tag "vendor/modernizr-2.5.3.min"
    = stylesheet_link_tag "site"
    = stylesheet_link_tag "/documentation/css/site"
    //= stylesheet_link_tag "internal-sitemap"
