    #JCDocsContentWrapper
      .jcdocs-main
        %header
          .chrome
            = partial("partials/_header")

            %nav.primary-nav
              %ul
                %li
                  %a{:href=>""} Base CSS
                %li
                  %a{:href=>""} Components
                %li
                  %a{:href=>""} JavaScript

        %nav#JCDocsSidebar.loading

        #JCDocsDocumentContentContainer{:role => "main", :class=>"page-content"}
          = yield

    #JCDocsFooterWrapper
      %div.jcdocs-page-width
        footer
    
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"}
    :javascript
      window.jQuery || document.write('<script src="../documentation/js/vendor/jquery-1.9.1.min.js"><\/script>')
    = javascript_include_tag "vendor/prettify"
    = javascript_include_tag "vendor/waypoints.min"
    = javascript_include_tag "../documentation/js/docs.js"